<div class="container-fluid">
  <div class="col-md-3 searchbox pull-right">
    <%= form_tag search_jobs_path , :method => :get  do %>
    <div class="input-group" id="search-id" >
      <input type="text" class="form-control" name="q" value="<%= params[:q] %>" placeholder="请输入职位信息">
      <div class="input-group-btn">
        <button class="btn btn-default" type="submit">
          <i class="glyphicon glyphicon-search"></i>
        </button>
      </div>

    </div>
    <% end %>
  </div>
</div>

<div class="row" style="margin-top: 0; margin-bottom: 300px;">
<div class="dropdown clearfix pull-right orderbtn">
  <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    排序
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
    <li>
      <%= link_to("按薪资下限排序", jobs_path(:order => "by_lower_bound")) %>
    </li>
    <li>
      <%= link_to("按薪资上限排序", jobs_path(:order => "by_upper_bound")) %>
    </li>
    <li>
      <%= link_to("按发布时间排序", jobs_path) %>
    </li>
  </ul>
</div>

<div class="panel panel-info cuspanel col-md-10 col-md-offset-1">
  <div class="panel-heading pahead">Trending</div>
    <table class="table table-boldered table-striped custab2">
      <thead>
        <tr>
          <td>职缺</td>
          <td>薪资下限</td>
          <td>薪资上限</td>
          <td>发布时间</td>
        </tr>
      </thead>
      <tbody>
        <% @jobs.each do |job| %>
        <tr>
          <td>
            <%= link_to(job.title, job_path(job)) %>
          </td>
          <td>
            <%= job.wage_lower_bound %>
          </td>
          <td>
            <%= job.wage_upper_bound %>
          <td>
            <%= job.created_at %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="text-center wpage">
    <%= will_paginate @jobs, :previous_label => "« 上一页", :next_label => "下一页 »", renderer: BootstrapPagination::Rails %>
  </div>
</div>


  <% if !current_user %>
   <div class="logintoolbar" id="logintoolbar">
     <div class="row huebg">
       <div class="toolcontent">
         <div class="toolslogan">在无忧<br />发现新的职业机会</div>
         <div class="bar-login"><%= link_to("登入", new_user_session_path) %></div>
         <div class="bar-right"><span class="fa fa-arrow-circle-right"></span> <%= link_to("极速注册", new_user_registration_path) %></div>
       </div>
     </div>
   </div>
   <% end %>
