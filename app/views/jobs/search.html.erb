<div>
<% if @query_string.blank? %>
    <div class="search-info-error">
      <h4><i class="fa fa-times-circle fa-lg" aria-hidden="true"></i> 搜索信息不能为空，请输入关键字搜索。</h4>
      <div class="text-center" style="margin-top: 20px;">
        <%= link_to("返回搜索", jobs_path, :class => "btn btn-lg btn-default") %>
      </div>
    </div>

  <% elsif @jobs.blank? %>
    <div class="search-info-error2">
      <h4><i class="fa fa-times-circle fa-lg" aria-hidden="true"></i> 暂无此项工作</h4>
      <div class="text-center" style="margin-top: 20px;">
        <%= link_to("查看职位列表", jobs_path, :class => "btn btn-lg btn-success") %>
      </div>
    </div>
  <% else %>
    <div class="panel panel-info cuspanel col-md-10 col-md-offset-1">
      <div class="panel-heading pahead">有关"<%= @query_string %>"的工作信息</div>
        <table class="table table-boldered table-striped custab2">
          <thead>
            <tr>
              <td>职缺</td>
              <td>薪资下限</td>
              <td>薪资上限</td>
              <td>发布时间</td>
            </tr>
          </thead>
          <tbody>
            <% @jobs.each do |job| %>
            <tr>
              <td>
                <%= link_to(render_highlight_content(job, @query_string), job_path(job)) %>
              </td>
              <td>
                <%= job.wage_lower_bound %>
              </td>
              <td>
                <%= job.wage_upper_bound %>
              <td>
                <%= job.created_at %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="text-center wpage">
        <%= will_paginate @jobs, :previous_label => "« 上一页", :next_label => "下一页 »", renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  <% end %>
</div>
